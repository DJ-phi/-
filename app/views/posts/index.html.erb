<div class="post_body">
  <h3 class="post_h3">投稿一覧</h3>
  <table>
    <thead>
      <tr>
        <th>タイトル</th>
        <th>食費</th>
        <th>交通費</th>
        <th>使った日</th>
        <th>合計額</th>
        <th>確認</th>
        <th>編集</th>
        <th>消去</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.food %></td>
          <td><%= post.traffic %></td>
          <td><%= post.updated_at.to_s(:datetime_jp) %></td>
          <td><%= post.total_price %></td>
          <td><%= link_to "参照", post %></td>
          <td><%= link_to "編集", [:edit, post] %></td>
          <td><%= link_to "削除", post, method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="post_btn">
    <%= link_to "新規登録", new_post_path, class: "btn" %>
  </div>
</div>
