<div class="search">
  <div class="keyword">
    <%= form_with url: posts_search_path, method: :get, local: true do |s| %>
      <%= s.text_field :search,placeholder: "キーワード..." %>
      <%= s.submit :search, class: "btn" %>
    <% end %>
  </div>
  <div class="price">
    <%= form_with url: posts_search_path, method: :get, local: true do |s| %>
      <%= s.radio_button :price_gteq, '' %>指定しない
      <%= s.radio_button :price_gteq, '500' %>¥500円以上
      <%= s.radio_button :price_gteq, '1000' %>¥1000円以上
      <%= s.radio_button :price_gteq, '3000' %>¥3000円以上
      <%= s.radio_button :price_gteq, '4000' %>¥4000円以上
      <%= s.radio_button :price_lteq, '5000' %>¥5000円以下
    <%= s.submit :search, class: "btn" %>
    <% end %>
  </div>
</div>
