<header>
  <div class="header-logo">
    <% if @current_user %>
      <%= link_to "家計簿アプリ", user_path(@current_user) %>
    <% else %>
      <h1>家計簿アプリ</h1>
    <% end %>  
  </div>
  <ul class="header-menus">
    <% if @current_user %>
      <li>
        <%= link_to "明細一覧", posts_path %>
      </li>
      <li>
        <%= link_to @current_user.name, user_path(@current_user) %>
      </li>
      <li>
        <%= link_to("ログアウト", "/logout", {method: "post"})%>
      </li>
    <% else %>
      <li>
        <%= link_to "会員登録", new_user_path %>
      </li>
      <li>
        <%= link_to "ログイン", login_path %>
      </li>
    <% end %>
  </ul>
</header>
