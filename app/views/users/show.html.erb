<div class="main user-show">
  <div class="container">
    <div class="user">
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <p><%= @user.password%></p>
      <%= link_to "編集", "/users/#{@user.id}/edit" %>
      <%= link_to "削除", user_path(@user), method: :delete, data: { confirm: "本当に削除しますか？?" } %>
    </div>
  </div>
</div>
