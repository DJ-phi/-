<div class="main user-show">
  <div class="container">
    <div class="user">
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <p><%= @user.password%></p>
      <%= link_to "編集", edit_user_path %>
      <%= link_to "削除", user_path(@user), method: :delete, data: { confirm: "本当に削除しますか？?" } %>
      <% # TODO: 動作確認が必要なので後ほど追加 %>
      <% if  false %>
        <% if @user.id == @current_user.id %>
          <%= link_to "編集", edit_user_path %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
